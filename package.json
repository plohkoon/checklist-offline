        "path": "^0.12.7",
        "sql": "^0.78.0",
        "sqlite": "^3.0.0",
        "sqlite3": "https://github.com/mapbox/node-sqlite3/tarball/master",
        "sqlstring": "^2.3.1",
        "url": "^0.11.0"
    },
    "devDependencies": {
        "electron": "^3.0.10",
        "electron-rebuild": "^1.8.2",
        "electron-winstaller": "^2.7.0"
