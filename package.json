{
    "name": "Closing-Notes",
    "version": "1.1.0",
    "description": "An offline Checklist app",
    "main": "main.js",
    "build": {
        "appId": "com.geekNotes.app",
        "ProductName": "Closing-Notes",
        "icon": "./public/Geek.ico",
        "ignore": "installers"
    },
    "author": {
        "name": "Gregory Huber",
        "email": "greg.huber@outlook.com"
    },
    "contributors": [
        {
            "name": "Leif Sandvar"
        }
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/plohkoon/checklist-offline"
    },
    "license": "ISC",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "start": "electron .",
